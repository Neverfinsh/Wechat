<!--index.wxml-->
<!--地图-->
<view class='main'>
  <map  class='main-map' id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14"  markers="{{markers}}"
         show-location   controls="{{controls}}"  bindcontroltap="controltap" bindmarkertap='BindMarkerTap' ></map>
</view>
<!--底部按钮部分-->
<view class='btns'>
  <view class='btn-publish'>
     <navigator url="/pages/publish/publish">发布</navigator>
  </view>
  <view class='btn'>搜索</view>
</view>